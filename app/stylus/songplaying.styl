.ProgressInfo-stateBar
	/*Mixin Call Example*/
	// animacion(1s,state,infinite)
	// animation 10s progress 1 linear
	background fucsia
	height .18rem
	width 0%

@keyframes progress
	0%
		width 0
	
	49%
		background fucsia
	
	50%
		background white
	
	51%
		background fucsia				

	100%
		width 100%				
			

.ProgressInfo-totalBar
.ProgressInfo-stateBar	
	border-radius 10px
	
.ProgressInfo-circle
	// animation 1s puls 10
	background gris_oscuro
	border-radius 50%
	display block
	height 0.6rem
	position absolute
	right 0
	top -3px
	width 0.6rem
	
@keyframes puls
	0%
		opacity 1
		transform scale(1)
	100%
		opacity 0
		transform scale(1.4)	
	
.ProgressInfo-max
.ProgressInfo-min
	color gris_claro
	font-size .8rem
	
/*PlaylistPrev COMPONENT*/	
.PlaylistPrev
	float left
	padding 0 2.4rem
	width 27rem
	/*Taking advantage of the part
	SongPlaying-description of the
	SongPlaying COMPONENT - OOCSS -
	Reuse*/
	& .SongPlaying-description
		display block
		
.PlaylistPrev-list
	list-style none
	margin 0
	overflow hidden
	padding 0
	
.PlaylistPrev-listItem
	position relative
	animation .5s showSongs 1 ease
	
@keyframes showSongs
	0%
		opacity 0
		
	100%
		opacity 1	
		

.PlaylistPrev-songLink
	border-bottom 1px solid gris_claro
	color gris_oscuro
	display block
	padding 1.4rem 0
	
.PlaylistPrev-actions
	display inline-block
	margin-top -0.5rem
	position absolute
	right 0
	top 50%
	
.PlaylistPrev-action
	color gris_claro
	margin-right .3rem
	&:last-child
		margin-right 0

/*<Â¡HIDDEN OBJECTS!>*/
.PlaylistPrev
	display none
	
.Audio
	display none				
			
@media screen and (min-width:1000px)
	
	/*SongPlaying COMPONENT*/
	.SongPlaying
		border-right 1px solid gris_claro
		padding 0 3rem
		&.large
			float left
			width 23rem
	
	.SongPlaying-description
		display none
	
	/*PlaylistPrev COMPONENT*/	
	.PlaylistPrev
		display block	

		
									