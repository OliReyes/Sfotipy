/*Vars*/
gris_claro = #818181
gris_oscuro = #333
fucsia = #cc2f6f

/*SonPlaying COMPONENT*/
.SongPlaying
	text-align center

.SongPlaying-imageContainer
	margin 0

.SongPlaying-image
	cursor pointer
	vertical-align top	
	width 100%

.SongPlaying-otherActions
	background rgba(black, .3)
	bottom 0
	font-size 1.7rem
	left 0
	padding .6rem 1.7rem 
	position absolute
	right 0
	text-align right
	
.SongPlaying-otherAction
	color #fff
	margin-right .6rem
	&:last-child
		margin-right 0

.SongPlaying-info
	padding 1.2rem

.SongPlaying-description
	border-bottom 1px solid gris_claro

.SongPlaying-title
	color gris_oscuro
	font-weight normal
	margin-bottom .1em
	margin-top 0
	
.SongPlaying-author
	color gris_claro	
	margin-top 0

.SongPlaying-actions
	margin-top .7rem
	padding .5rem 1rem
	
.SongPlaying-action
	color gris_claro
	margin-right 1.3rem
	&:last-child
		margin-right 0			

.SongPlaying-currentSongLargeInfo
	border-bottom 1px solid gris_oscuro


/*ProgressInfo MODULE*/
.ProgressInfo
	margin-top 1.4rem		

.ProgressInfo-totalBar
	background gris_claro
	display inline-block
	height .18rem
	margin 0 .4rem
	vertical-align middle
	width 60%

/*Animation With KeyFrames in Mixin Example*/
// animacion(d,n,f)
